{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["vite/client", "vitest"],

    "paths": {
      "@/*": ["./src/*"],
      "utils/*": ["./src/utils/*"],
      "layouts/*": ["./src/layouts/*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "pages/*": ["./src/pages/*"],
      "types/*": ["./src/types/*"],
    },
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "extends": "../../tsconfig.base.json"
}
